{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers-extra/features/haskell:2": {
			"installHLS": true,
			"downgradeGhcToSupportHls": true,
			"installStack": true,
			"installStackGHCupHook": true,
			"adjustBash": true,
			"ghcVersion": "recommended",
			"cabalVersion": "recommended",
			"globalPackages": "",
			"globalLibraries": ""
		}
	},
	"postCreateCommand": "stack build --only-dependencies"
}